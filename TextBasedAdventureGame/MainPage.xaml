<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TextBasedAdventureGame.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="Location Description"/>
            <Label x:Name="LocationDescriptionLabel" />
            <Label Text="Click on an option to travel to that location"/>
            <ListView x:Name="TravelOptionsListView" ItemTapped="TravelOptionsListView_ItemTapped">
            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
